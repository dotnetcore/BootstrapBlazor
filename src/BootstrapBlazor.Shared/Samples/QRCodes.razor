@page "/qrcodes"

<h3>@Title</h3>

<h4>@SubTitle</h4>

<PackageTips Name="BootstrapBlazor.BarCode" />

<DemoBlock Title="@Localizer["NormalTitle"]" Introduction="@Localizer["NormalIntro"]" Name="Normal">
    <QRCode OnGenerated="@OnGenerated" ShowButtons="true"></QRCode>
    <BlockLogger @ref="Trace" class="mt-3" />
</DemoBlock>

<DemoBlock Title="@Localizer["ContentTitle"]" Introduction="@Localizer["ContentIntro"]" Name="Content">
    <QRCode Content="https://www.blazor.zone"></QRCode>
</DemoBlock>

<DemoBlock Title="@Localizer["WidthTitle"]" Introduction="@Localizer["WidthIntro"]" Name="Width">
    <QRCode Content="https://www.blazor.zone" Width="80"></QRCode>
</DemoBlock>

<DemoBlock Title="@Localizer["ColorTitle"]" Introduction="@Localizer["ColorIntro"]" Name="DarkColor">
    <QRCode Content="https://www.blazor.zone" DarkColor="#50cd89"></QRCode>
</DemoBlock>

<AttributeTable Items="@GetAttributes()" />
