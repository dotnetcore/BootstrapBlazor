@using BootstrapBlazor.Enums;

<MouseFollower Options="@followerOptions"
               FollowerMode="MouseFollowerMode.Image"
               ImagePath="./_content/BootstrapBlazor.Shared/images/mousefollower/cat.gif">
    <div class="mouseFollower-demo" />
</MouseFollower>

@code {
    private MouseFollowerOptions followerOptions = new MouseFollowerOptions()
        {
            ClassName = "mf-cursor bb-cursor",
            MediaClassName = "mf-cursor-media bb-cursor-media"
        };
}

<style>
    .bb-cursor {
        color: orangered;
        height: auto;
        width: auto;
    }

    .bb-cursor-media {
        position: absolute;
        width: auto;
        height: auto;
        margin: -50px -100px 0 0;
    }
</style>
