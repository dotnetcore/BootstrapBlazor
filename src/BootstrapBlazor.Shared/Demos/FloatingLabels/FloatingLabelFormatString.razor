@using BootstrapBlazor.Shared.Samples
@inject IStringLocalizer<FloatingLabels> Localizer

<div class="row g-3">
    <div class="col-12 col-sm-6">
        <FloatingLabel DisplayText="@Localizer["FloatingLabelFormatStringDisplayText"]" FormatString="000" step="1" @bind-Value="@Model.Count" />
    </div>
    <div class="col-12 col-sm-6 align-self-center">
        <div class="col-form-label">@Localizer["FloatingLabelFormatStringDiv1", @Model.Count.ToString("000")]</div>
    </div>
</div>

@code {
    [NotNull]
    private Foo? Model { get; set; }

    /// <summary>
    /// OnInitialized
    /// </summary>
    protected override void OnInitialized()
    {
        base.OnInitialized();

        Model = new Foo() { Name = Localizer["FloatingLabelsTestName"] };
    }
}
