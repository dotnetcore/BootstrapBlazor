@inject IStringLocalizer<Foo> FooLocalizer

<Repeater TValue="Foo" Items="Items">
    <ItemTemplate>
        <div class="d-flex">
            @context.Name
        </div>
    </ItemTemplate>
</Repeater>

@code {
    [NotNull]
    private List<Foo>? Items { get; set; }

    protected override void OnInitialized()
    {
        // 生成数据
        Items = Foo.GenerateFoo(FooLocalizer, 4);
    }
}
