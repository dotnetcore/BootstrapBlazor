           Introduction="@Localizer["TablesFixedColTableHeaderIntro"]"
           Name="FixedColTableHeader">
    <Table TItem="Foo"
           Items="@Items.Take(10)"
           RenderMode="TableRenderMode.Table"
           IsBordered="true" IsStriped="true"
           IsMultipleSelect="true"
           Height="200"
           FixedMultipleColumn="true">
