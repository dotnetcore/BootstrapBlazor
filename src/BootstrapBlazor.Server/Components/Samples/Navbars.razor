@page "/navbar"
@inject IStringLocalizer<Navbars> Localizer

<h3>@Localizer["NavbarTitle"]</h3>

<h4>@Localizer["NavbarDescription"]</h4>

<DemoBlock Title="@Localizer["NormalTitle"]" Introduction="@Localizer["NormalIntro"]" Name="Normal">
    <Navbar>
        <NavbarBrand>
            <a href="#">Navbar</a>
        </NavbarBrand>
        <NavbarToggleButton Target="#test"></NavbarToggleButton>
        <NavbarCollapse Id="test">
            <NavbarGroup>
                <NavbarLink>Home</NavbarLink>
                <NavbarLink Text="Link"></NavbarLink>
                <NavbarDropdown Text="Dropdown">
                    <NavbarDropdownItem>Action</NavbarDropdownItem>
                    <NavbarDropdownItem>Another action</NavbarDropdownItem>
                    <NavbarDropdownDivider></NavbarDropdownDivider>
                    <NavbarDropdownItem>Something else here</NavbarDropdownItem>
                </NavbarDropdown>
                <NavbarLink IsDisabled="true">Disabled</NavbarLink>
            </NavbarGroup>
            <NavbarGroup>
                <ValidateForm class="d-flex" role="search" Model="_searchModel" OnValidSubmit="OnValidSubmit">
                    <BootstrapInput class="me-2" placeholder="Search" @bind-Value="_searchModel.SearchText" ShowLabel="false" SkipValidate="true"></BootstrapInput>
                    <Button Color="Color.Success" IsOutline="true" ButtonType="ButtonType.Submit">Search</Button>
                </ValidateForm>
            </NavbarGroup>
        </NavbarCollapse>
    </Navbar>
    <section ignore>
        <ul class="ul-demo">
            <li><code>NavbarBrand</code></li>
            <li><code>NavbarToggleButton</code></li>
            <li><code>NavbarCollapse</code></li>
            <li><code>NavbarGroup</code></li>
            <li><code>NavbarItem</code></li>
            <li><code>NavbarLink</code></li>
            <li><code>NavbarDropdown</code></li>
        </ul>
    </section>
</DemoBlock>
