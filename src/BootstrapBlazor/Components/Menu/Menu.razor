@namespace BootstrapBlazor.Components
@inherits BootstrapModuleComponentBase
@attribute [BootstrapModuleAutoLoader]

<nav @attributes="@AdditionalAttributes" id="@Id" class="@ClassString" data-bb-expand="@ExpandString" data-bb-scroll-view="@(IsScrollIntoView && IsVertical)">
    <CascadingValue Value="this" IsFixed="true">
        @if (IsVertical)
        {
            <SideMenu Items="@Items" Id="@SideMenuId" class="@SideMenuClassString" OnClick="@OnClickMenu"></SideMenu>
        }
        else
        {
            <TopMenu Items="@Items" OnClick="@OnClickMenu"></TopMenu>
        }
    </CascadingValue>
</nav>
