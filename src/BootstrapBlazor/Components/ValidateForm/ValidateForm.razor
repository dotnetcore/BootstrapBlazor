@namespace BootstrapBlazor.Components
@inherits IdComponentBase

@if (Model != null)
{
    <CascadingValue Value="this">
        <EditForm Model="@Model" @attributes="@AdditionalAttributes" id="@Id" data-bb-dissubmit="@DisableAutoSubmitString" OnValidSubmit="@OnValidSubmitForm" OnInvalidSubmit="@OnInvalidSubmit">
            <BootstrapBlazorDataAnnotationsValidator @ref="Validator"/>
            @ChildContent
        </EditForm>
    </CascadingValue>
}
